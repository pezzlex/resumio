{
  "name": "isomorphic",
  "description": "react redux admin dashboard",
  "version": "3.0.6",
  "private": true,
  "author": "RedQ, Inc",
  "workspaces": [
    "shared/*",
    "packages/*",
    "packages/isomorphic-boilerplate-graphql/*"
  ],
  "scripts": {
    "clean": "lerna clean --yes && rimraf node_modules",
    "clean:build": "lerna exec -- rimraf \"{.next,dist,out,build,.docz}\"",
    "start": "yarn workspace @iso/boilerplate-single run start",
    "dev": "concurrently \"cd packages/isomorphic-boilerplate-single/servers && yarn start\" \"yarn start\"",
    "start:iso-boilerplate": "yarn workspace @iso/boilerplate run start",
    "build": "yarn workspace @iso/boilerplate-single run build",
    "build:iso-cra": "yarn workspace @iso/cra run build",
    "build:iso-next": "yarn workspace @iso/next run build",
    "build:iso-boilerplate": "yarn workspace @iso/boilerplate run build",
    "serve": "yarn workspace @iso/boilerplate-single run serve",
    "serve:iso-cra": "yarn workspace @iso/cra run serve",
    "serve:iso-next": "yarn workspace @iso/next run start",
    "serve:iso-boilerplate": "yarn workspace @iso/next run serve"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css}": [
      "prettier --trailing-comma es5 --single-quote --write"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.10",
    "prettier": "^2.0.5",
    "redux-devtools-extension": "^2.13.8",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2"
  },
  "dependencies": {
    "joi": "^17.1.1",
    "jwt-simple": "^0.5.6",
    "nodemailer": "^6.4.10"
  }
}
